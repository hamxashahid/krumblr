<div class="page-header">
  <%= link_to posts_path, class: 'btn btn-warning' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_post_path(@post), class: 'btn btn-warning' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show post</h1>
</div>

<dl class="dl-horizontal">

  <dt>Blog:</dt>
  <dd><%= @post.blog.title %></dd>

  <dt>Title:</dt>
  <dd><%= @post.title %></dd>

  <dt>Body:</dt>
  <dd><%= @post.body %></dd>

  <dt>Published: <span class="glyphicon glyphicon-ok"></span></dt>
  <dd><%= @post.published %></dd>

  <dt>Tags: </dt>
  <dd><%= @post.tag_list %></dd>

</dl>
